<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="60">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <RollingFile name="LogFile" fileName="./target/logs/VerificationService.log" filePattern="./target/logs/VS-%d{MM-dd-yyyy}-%i.gz">
            <!-- Layout des Textes -->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <!-- Maximale Groesse des Files -->
            <Policies>
                <SizeBasedTriggeringPolicy size="5 MB" />
            </Policies>
            <!-- Maximale Anzahl der Files die gesichert werden -->
            <DefaultRolloverStrategy max="5" />
        </RollingFile>        
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
        <logger name="app.coronawarn.verification.services" additivity="true" level="info">
            <AppenderRef ref="LogFile"/>
        </logger>
    </Loggers>
</Configuration>